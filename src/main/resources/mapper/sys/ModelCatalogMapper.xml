<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.tayle.sys.dao.ModelCatalogDao">
<!--根据需求调整缓存参数：-->
    <cache type="org.mybatis.caches.ehcache.EhcacheCache">
        <property name="timeToIdleSeconds" value="3600"/>
        <property name="timeToLiveSeconds" value="3600"/>
        <!-- 同ehcache参数maxElementsInMemory -->
        <property name="maxEntriesLocalHeap" value="1000"/>
        <!-- 同ehcache参数maxElementsOnDisk -->
        <property name="maxEntriesLocalDisk" value="10000000"/>
        <property name="memoryStoreEvictionPolicy" value="LRU"/>
    </cache>
	<!-- 表名 -->
	<sql id="tableName">
		sys_model_catalog
	</sql>
	
	<!-- 数据表所有列名 -->
	<sql id="Base_Column_List">
		`id`,`model_no`,`model_name`,`model_describe`,`model_type`,`url`,`model_version`,`remark`,`create_user_id`,`create_time`,`update_time`,`status`	</sql>

	<!-- 查询字段 -->
	<sql id="Base_Search_Param">
				<if test="id != null and id != ''"> and id = #{id} </if>
				<if test="modelNo != null and modelNo != ''"> and model_no = #{modelNo} </if>
				<if test="modelName != null and modelName != ''"> and model_name = #{modelName} </if>
				<if test="modelDescribe != null and modelDescribe != ''"> and model_describe = #{modelDescribe} </if>
				<if test="modelType != null and modelType != ''"> and model_type = #{modelType} </if>
				<if test="url != null and url != ''"> and url = #{url} </if>
				<if test="modelVersion != null and modelVersion != ''"> and model_version = #{modelVersion} </if>
				<if test="remark != null and remark != ''"> and remark = #{remark} </if>
				<if test="createUserId != null and createUserId != ''"> and create_user_id = #{createUserId} </if>
				<if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
				<if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
				<if test="status != null and status != ''"> and status = #{status} </if>
			</sql>
	
	
	<select id="get" resultType="cn.tayle.sys.domain.ModelCatalogDO" useCache="false">
		select
		<include refid="Base_Column_List" />
		from
		<include refid="tableName" />
		where id = #{value}
	</select>
	
	<select id="exportData" resultType="cn.tayle.sys.domain.ModelCatalogDO"
		parameterType="cn.tayle.sys.domain.ModelCatalogDO">
		select
		<include refid="Base_Column_List" />
		from
		<include refid="tableName" />
		where 1=1
		<include refid="Base_Search_Param" />
	</select>


	<select id="listByPage" resultType="cn.tayle.sys.domain.ModelCatalogDO">
		select
		<include refid="Base_Column_List" />
		from
		<include refid="tableName" />
		 where 1 = 1
		<include refid="Base_Search_Param" />
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from sys_model_catalog
		  where 1 = 1
		<include refid="Base_Search_Param" />
	</select>
	 
	<insert id="save" parameterType="cn.tayle.sys.domain.ModelCatalogDO" useGeneratedKeys="true" keyProperty="id">
		insert into sys_model_catalog
		(
			`model_no`, 
			`model_name`, 
			`model_describe`, 
			`model_type`, 
			`url`, 
			`model_version`, 
			`remark`, 
			`create_user_id`, 
			`create_time`, 
			`update_time`, 
			`status`
		)
		values
		(
			#{modelNo}, 
			#{modelName}, 
			#{modelDescribe}, 
			#{modelType}, 
			#{url}, 
			#{modelVersion}, 
			#{remark}, 
			#{createUserId}, 
			#{createTime}, 
			#{updateTime}, 
			#{status}
		)
	</insert>
	 
	<update id="update" parameterType="cn.tayle.sys.domain.ModelCatalogDO">
		update sys_model_catalog 
		<set>
			<if test="modelNo != null">`model_no` = #{modelNo}, </if>
			<if test="modelName != null">`model_name` = #{modelName}, </if>
			<if test="modelDescribe != null">`model_describe` = #{modelDescribe}, </if>
			<if test="modelType != null">`model_type` = #{modelType}, </if>
			<if test="url != null">`url` = #{url}, </if>
			<if test="modelVersion != null">`model_version` = #{modelVersion}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="createUserId != null">`create_user_id` = #{createUserId}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="status != null">`status` = #{status}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from sys_model_catalog where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from sys_model_catalog where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>