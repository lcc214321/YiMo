<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.yimo.sys.dao.RoleDao">
	<!-- 表名 -->
	<sql id="tableName">
		sys_role
	</sql>
	
	<!-- 数据表所有列名 -->
	<sql id="Base_Column_List">
		`role_id`,`role_name`,`role_sign`,`remark`,`create_user_id`,`create_time`,`update_time`,`status`	</sql>

	<!-- 查询字段 -->
	<sql id="Base_Search_Param">
				<if test="roleId != null and roleId != ''"> and role_id = #{roleId} </if>
				<if test="roleName != null and roleName != ''"> and role_name = #{roleName} </if>
				<if test="roleSign != null and roleSign != ''"> and role_sign = #{roleSign} </if>
				<if test="remark != null and remark != ''"> and remark = #{remark} </if>
				<if test="createUserId != null and createUserId != ''"> and create_user_id = #{createUserId} </if>
				<if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
				<if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
				<if test="updateTime != null and updateTime != ''"> and status = #{status} </if>
			</sql>
	
	
	<select id="get" resultType="top.yimo.sys.domain.RoleDO">
		select
		<include refid="Base_Column_List" />
		from
		<include refid="tableName" />
		where role_id = #{value} 
	</select>
	
	<select id="getAllRoles" resultType="top.yimo.sys.domain.RoleDO">
		select
		<include refid="Base_Column_List" />
		from
		<include refid="tableName" />
		where status = 1
	</select>

	<select id="listByPage" resultType="top.yimo.sys.domain.RoleDO">
		select
		<include refid="Base_Column_List" />
		from
		<include refid="tableName" />
		 where 1 = 1
		<include refid="Base_Search_Param" />
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by role_id desc
			</otherwise>
        </choose>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from sys_role
		  where 1 = 1
		<include refid="Base_Search_Param" />
	</select>
	
	 <select id="getRolesByUserId" parameterType="Long" resultType="top.yimo.sys.domain.RoleDO">
		select r.`role_id`,r.`role_name`,r.`role_sign`,r.`remark`,r.`create_user_id`,r.`create_time`,r.`update_time`,r.`status` 
		from sys_role r ,sys_user_role ur 
		where ur.role_id=r.role_id and ur.user_id=#{userId} and r.status='1' 
	</select>
	 
	<insert id="save" parameterType="top.yimo.sys.domain.RoleDO" useGeneratedKeys="true" keyProperty="roleId">
		insert into sys_role
		(
			`role_name`, 
			`role_sign`, 
			`remark`, 
			`create_user_id`, 
			`create_time`, 
			`update_time`,
			`status`
		)
		values
		(
			#{roleName}, 
			#{roleSign}, 
			#{remark}, 
			#{createUserId}, 
			#{createTime}, 
			#{updateTime},
			#{status}
			
		)
	</insert>
	 
	<update id="update" parameterType="top.yimo.sys.domain.RoleDO">
		update sys_role 
		<set>
			<if test="roleName != null">`role_name` = #{roleName}, </if>
			<if test="roleSign != null">`role_sign` = #{roleSign}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="createUserId != null">`create_user_id` = #{createUserId}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime},</if>
			<if test="status != null">`status` = #{status}</if>
		</set>
		where role_id = #{roleId}
	</update>
	
	<delete id="remove">
		delete from sys_role where role_id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from sys_role where role_id in 
		<foreach item="roleId" collection="array" open="(" separator="," close=")">
			#{roleId}
		</foreach>
	</delete>

</mapper>