<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="top.yimo.blog.dao.MetaDao">
	<!-- 表名 -->
	<sql id="tableName">
		b_meta
	</sql>
	
	<!-- 数据表所有列名 -->
	<sql id="Base_Column_List">
		`mid`,`name`,`slug`,`type`,`description`,`sort`,`parent`	</sql>

	<!-- 查询字段 -->
	<sql id="Base_Search_Param">
				<if test="mid != null and mid != ''"> and mid = #{mid} </if>
				<if test="name != null and name != ''"> and name = #{name} </if>
				<if test="slug != null and slug != ''"> and slug = #{slug} </if>
				<if test="type != null and type != ''"> and type = #{type} </if>
				<if test="description != null and description != ''"> and description = #{description} </if>
				<if test="sort != null and sort != ''"> and sort = #{sort} </if>
				<if test="parent != null and parent != ''"> and parent = #{parent} </if>
			</sql>
	
		<select id="getMetasByType" resultType="top.yimo.blog.domain.MetaDO" useCache="false">
		select
		<include refid="Base_Column_List" />
		from
		<include refid="tableName" />
		where type = #{type}
	</select>
	
	<select id="get" resultType="top.yimo.blog.domain.MetaDO" useCache="false">
		select
		<include refid="Base_Column_List" />
		from
		<include refid="tableName" />
		where mid = #{value}
	</select>
	
	<select id="exportData" resultType="top.yimo.blog.domain.MetaDO"
		parameterType="top.yimo.blog.domain.MetaDO">
		select
		<include refid="Base_Column_List" />
		from
		<include refid="tableName" />
		where 1=1
		<include refid="Base_Search_Param" />
	</select>


	<select id="listByPage" resultType="top.yimo.blog.domain.MetaDO">
		select
		<include refid="Base_Column_List" />
		from
		<include refid="tableName" />
		 where 1 = 1
		<include refid="Base_Search_Param" />
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by mid desc
			</otherwise>
        </choose>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from b_meta
		  where 1 = 1
		<include refid="Base_Search_Param" />
	</select>
	 
	<insert id="save" parameterType="top.yimo.blog.domain.MetaDO" useGeneratedKeys="true" keyProperty="mid">
		insert into b_meta
		(
			`name`, 
			`slug`, 
			`type`, 
			`description`, 
			`sort`, 
			`parent`
		)
		values
		(
			#{name}, 
			#{slug}, 
			#{type}, 
			#{description}, 
			#{sort}, 
			#{parent}
		)
	</insert>
	 
	<update id="update" parameterType="top.yimo.blog.domain.MetaDO">
		update b_meta 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="slug != null">`slug` = #{slug}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="description != null">`description` = #{description}, </if>
			<if test="sort != null">`sort` = #{sort}, </if>
			<if test="parent != null">`parent` = #{parent}</if>
		</set>
		where mid = #{mid}
	</update>
	
	<delete id="remove">
		delete from b_meta where mid = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from b_meta where mid in 
		<foreach item="mid" collection="array" open="(" separator="," close=")">
			#{mid}
		</foreach>
	</delete>

</mapper>