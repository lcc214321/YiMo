<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.thymeleaf.org" th:with="title='${htmlTitle}'">
<meta charset="utf-8">
<header th:replace="header::headerFragment(${title})"></header>
<body class="gray-bg">
	<div class="wrapper wrapper-content ">
		<div class="row">
			<div class="col-sm-12">
				<div class="ibox float-e-margins">
					<div class="ibox-content">
						<form class="form-horizontal m-t" id="${className}Form">
						<input id="${pk.attrname}" name="${pk.attrname}" th:value="${${classname}.${pk.attrname}}"  type="hidden">
								#foreach($column in $columns)
								#if($column.columnName != $pk.columnName)
								<div class="form-group">	
								<label class="col-sm-3 control-label">${column.comments}：</label>
								<div class="col-sm-8">
									<input id="${column.attrname}" name="${column.attrname}" th:value="${${classname}.${column.attrname}}" class="form-control" type="text">
								</div>
							</div>
							#end
							#end
							<div class="form-group">
								<div class="col-sm-8 col-sm-offset-3">
									<button type="submit" class="btn btn-primary">提交</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div th:replace="footer :: footer"></div>
	$().ready(function() {
	        validateRule();
        });
        $.validator.setDefaults({
        	submitHandler : function() {
		        update();
	        }
        });

		function update() {
			yimo.ajaxPut({
				url : prefix + "/update",
				data : $('#${className}Form').serialize(),
				needClose : true,
	            parentRefresh : true,
			});
		}
		
        function validateRule() {
	        var icon = "<i class='fa fa-times-circle'></i> ";
	        $("#${className}Form").validate({
	        	rules : {
	        	#foreach($column in $columns) 
	        		#if($column.columnName != $pk.columnName)
	        			 ${column.attrname} : {
	 		                required : true
	 	                },
	        		#end
	        	#end
	        	 },
	        	 messages : {
	        	 #foreach($column in $columns) 
	        	 	#if($column.columnName != $pk.columnName)
        			 ${column.attrname} : {
 		                required : icon + "请输入${column.comments}"
 	                },
        			#end
        		#end
	        	 }
	        })
        }
</body>
</html>
